
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
  
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Page Title -->
    <title>Eatry</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/favicon.png" type="image/x-icon">

    <!-- CSS Files -->

    <link rel="stylesheet" href="~/Content/animate-3.7.0.css">
    <link rel="stylesheet" href="~/Content/font-awesome-4.7.0.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap-4.1.3.min.css">
    <link rel="stylesheet" href="~/Content/owl-carousel.min.css">
    <link rel="stylesheet" href="~/Content/jquery.datetimepicker.min.css">
    <link rel="stylesheet" href="~/Content/style.css">


    <script src="~/Content/jquery-2.2.4.min.js"></script>
    <script src="~/Content/bootstrap-4.1.3.min.js"></script>
    <script src="~/Content/wow.min.js"></script>
    <script src="~/Content/owl-carousel.min.js"></script>
    <script src="~/Content/jquery.datetimepicker.full.min.js"></script>
    <script src="~/Content/jquery.nice-select.min.js"></script>
    <script src="~/Content/main.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
html {
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

.column {
  float: left;
  width: 29.3%;
  margin-bottom: 16px;
  padding: 0 8px;
}

/*.mediascreen and(max-width: 650px) {
  .column{
    width: 100%;
    display: block;
  }
}*/
         h2 {
                color: orangered;
                font-weight: bold;
            }

.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
}

.container {
  padding: 0 16px;
}

.container::after, .row::after {
  content: "";
  clear: both;
  display: table;
}

.title {
  color: grey;
}

.button {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  background-color: darkblue;
  text-align: center;
  cursor: pointer;
  width: 100%;
}

.button:hover {
  background-color: #555;
}

.section{
    margin:200px;
    margin-left: 160px;
}
    </style>
</head>
<body>
    <div class="preloader">
        <div class="spinner"></div>
    </div>
    <!-- Preloader End -->
    <!-- Header Area Starts -->
    <header class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="logo-area">
                        <a href="index.html"><img src="~/Content/logo2.png" alt="logo"></a>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="custom-navbar">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                    <div class="main-menu">
                        <ul>
                            <li class="active"><a href="index.html">home</a></li>
                            <li><a href="about.html">about</a></li>
                            <li><a href="menu.html">menu</a></li>
                            <li><a href="~/Home/Index">Log Out</a></li>

                           

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="section">
        <h2>Welcome Back to Eatry, @Session["Username"] </h2>
        
        <h2></h2>
        <br>

        <div class="row">
            <div class="column">
                <div class="card">
                    <img src="~/Content/foodO.jpg" alt="Jane" style="width:100%">
                    <div class="container">
                        
                        <h5 class="title">Order Food Online</h5>
                        <p>Download the food, you love</p>
                        
                        <p><button class="button">Order Now</button></p>
                    </div>
                </div>
            </div>

            <div class="column">
                <div class="card">
                    <img src="~/Content/resoO.jpg" alt="Mike" style="width:100%">
                    <div class="container">
                      
                        <h5 class="title">Reserve Table</h5>
                        <p>A better dining experience</p>
                        
                        <p><button class="button">Book Table</button></p>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="card">
                    <img src="~/Content/rateo.png" alt="John" style="width:100%">
                    <div class="container">
                       >
                        <h5 class="title">Your Feedback</h5>
                        <p>Rate your experience</p>
                     
                        <p><button class="button">Record Feedback</button></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer-area">
        <div class="footer-widget section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="single-widget single-widget1">
                            <a href="index.html"><img src="~/Content/logo2.png" alt=""></a>
                            <p class="mt-3">We pride ourselves on delivering inspirational cuisine with a promise that every morsel that hits your mouth will be prepared with utmost care regarding taste and hygiene.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="single-widget single-widget2 my-5 my-md-0">
                            <h5 class="mb-4">contact us</h5>
                            <div class="d-flex">
                                <div class="into-icon">
                                    <i class="fa fa-map-marker"></i>
                                </div>
                                <div class="info-text">
                                    <p>Gulberg III, Lahore </p>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="into-icon">
                                    <i class="fa fa-phone"></i>
                                </div>
                                <div class="info-text">
                                    <p>03404545723</p>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="into-icon">
                                    <i class="fa fa-envelope-o"></i>
                                </div>
                                <div class="info-text">
                                    <p>support@eatry.com</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 col-md-6">
                        <span>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved.
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </span>
                    </div>
                    <div class="col-lg-5 col-md-6">
                        <div class="social-icons">
                            <ul>
                                <li class="no-margin">Follow Us</li>
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @if (TempData["Message"] != null)
    {
        <script type="text/javascript">
        window.onload = function() {
            alert("@(TempData["Message"] as string)");
        };
        </script>
    }

</body>
</html>

